<resources>
    <!-- Cardview Style -->
    <attr name="cardStyle" format="reference" />

    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">1dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardViewStyle.Light">
        <item name="cardBackgroundColor">@color/card_light</item>
    </style>

    <style name="CardViewStyle.Dark">
        <item name="cardBackgroundColor">@color/card_dark</item>
    </style>

    <!-- Common things. -->
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- EditTexts -->
    <style name="EditTexts">
        <item name="colorControlNormal">#9e9e9e</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
